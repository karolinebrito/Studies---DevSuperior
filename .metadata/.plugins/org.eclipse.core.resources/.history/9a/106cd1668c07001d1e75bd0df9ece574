package main;

import java.util.Scanner;

public class Exercises_Topic03_Aula12 {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		System.out.println("Base = ");
		double base = sc.nextDouble();
		System.out.println("Heigth = ");
		double heigth = sc.nextDouble();
		double area = base*heigth;
		System.out.printf("Area = ", area);
		double perimeter = 2*(base+heigth);
		System.out.printf("Perimeter = ", perimeter);
		double diagonal = Math.pow(area, 2) + Math.pow(heigth,2);
		System.out.printf("Diagonal = ", diagonal);		
		
		sc.close();

	}

}
